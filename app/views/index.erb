<div class="container">
  <h1>Tasks</h1>
  <div class="list-group">
    <% @tasks.each do |task| %>
      <a href="/tasks/<%= task.id %>" class="list-group-item"><h4 class="list-group-item-heading"><%= task.title %></h4>
        <p class="list-group-item-text"><%= task.description.chars.take(16).join
        %></p>
      </a>
      <a href="/tasks/<%= task.id %>/edit" class="btn btn-lg btn-default">Edit</a>

      <form action="/tasks/<%= task.id %>" method="post"/>
        <input type="hidden" name="_method" value="delete">
        <input type="submit" class="btn btn-lg btn-primary" value="delete"/>
      </form>
    <% end %>
  </div>
</div>
