<div class="container">
  <h1>Edit Task</h1>
  <div class="col-md-10 col-md-offset-1 form-group has-feedback has-success">
    <form action="/tasks/<%= @task.id %>" method="post">
      <p>Edit</p>
      <input type="hidden" name="_method" value="put" />
      <input type="text" class="form-control" name="task[title]"
             value="<%= @task.title %>" /><br/> <textarea class="form-control"
             id="description" name="task[description]">
             <%= @task.description %></textarea><br/>
      <input type="submit" class="btn btn-lg btn-primary"/>
    </form>
  </div>
</div>
